
timer_start () {
  TIMER=${TIMER:-$SECONDS}
}

timer_stop () {
  ELLAPSED=$(($SECONDS - $TIMER))

  unset TIMER
}

trap 'timer_start' DEBUG

if [ "$PROMPT_COMMAND" == "" ]; then
  PROMPT_COMMAND="timer_stop"
else
  PROMPT_COMMAND="$PROMPT_COMMAND; timer_stop"
fi

PS1="\`if [ \$? = 0 ]; then echo \[\e[1\;33m\]; else echo \[\e[1\;31m\]; fi\`\${ELLAPSED}s\[\e[m\] \[\e[1;35m\]\u\[\e[m\] \W  "
PS2=' '
