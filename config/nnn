export NNN_TRASH=1

BLK="e4" CHR="e4" DIR="04" EXE="02" REG="0f" HARDLINK="75" SYMLINK="75" MISSING="f7" ORPHAN="f7" FIFO="d7" SOCK="cb" OTHER="07"
export NNN_FCOLORS="$BLK$CHR$DIR$EXE$REG$HARDLINK$SYMLINK$MISSING$ORPHAN$FIFO$SOCK$OTHER"
