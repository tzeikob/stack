#!/bin/sh

displays -q restore layout &
displays -q restore colors &
cloud -q mount remotes &
desktop -q init pointer &
desktop -q init tablets &
desktop -q init wallpaper &
security -q init locker &
power -q init screensaver &
notifications -q start &

pgrep -x sxhkd > /dev/null || sxhkd &
$HOME/.config/polybar/launch &

bspc monitor -d 1 2 3 4 5

bspc config border_width         0
bspc config window_gap          10

bspc config split_ratio          0.5
bspc config borderless_monocle   true
bspc config gapless_monocle      false

bspc config external_rules_command $HOME/.config/bspwm/rules
