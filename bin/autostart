#!/usr/bin/env bash

# Set the file chooser window size
gsettings set org.gtk.Settings.FileChooser window-size '(800, 600)'

# Set the default applications for basic mime types
xdg-mime default nnn.desktop inode/directory

xdg-mime default sxiv.desktop image/jpeg
xdg-mime default sxiv.desktop image/jpg
xdg-mime default sxiv.desktop image/png
xdg-mime default sxiv.desktop image/tiff

xdg-mime default mpv.desktop audio/mp3
xdg-mime default mpv.desktop audio/flac
xdg-mime default mpv.desktop audio/midi

xdg-mime default mpv.desktop audio/mp4
xdg-mime default mpv.desktop audio/mkv
xdg-mime default mpv.desktop audio/mov
xdg-mime default mpv.desktop audio/mpeg
xdg-mime default mpv.desktop audio/avi

xdg-mime default org.gnome.Evince.desktop application/pdf
xdg-mime default com.github.johnfactotum.Foliate.desktop application/epub+zip
xdg-mime default com.github.xournalapp.xournalapp.desktop application/x-xojpp
xdg-mime default com.github.xournalapp.xournalapp.desktop application/x-xopp
xdg-mime default com.github.xournalapp.xournalapp.desktop application/x-xopt
xdg-mime default com.github.xournalapp.xournalapp.desktop application/gzip
